{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "target": "ES2022",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "rootDirs": ["./src", "./__test__"],
    "moduleResolution": "node",
    "incremental": true,
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "paths": {
      "@*": [
        "./*"
      ]
    }
  },
  "lib": [
    "es2022"
  ],
  "include": [
    "src/**/*",
    "jest.config.ts",
    "__test__/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
